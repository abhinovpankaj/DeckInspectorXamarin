    <AbsoluteLayout>
        <controles:Loading
            AbsoluteLayout.LayoutBounds="0,0,1,1"
            AbsoluteLayout.LayoutFlags="All"
            IsVisible="{Binding IsBusyProgress}" />
        <Grid x:Name="mainLayout" BackgroundColor="{DynamicResource Orange-300}"
            AbsoluteLayout.LayoutBounds="0,0,1,1"
            AbsoluteLayout.LayoutFlags="All"
            IsVisible="{Binding IsBusyProgress, Converter={StaticResource InverseBoolConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                
            </Grid.RowDefinitions>
            <StackLayout Margin="0,10,0,0" Padding="0" IsVisible="{Binding IsVisualProjectLocatoion}">
                <CarouselView x:Name="carouselView" IndicatorView="indicatorView"  PeekAreaInsets="20"                                       
                                            ItemsSource="{Binding VisualProjectLocationPhotoItems}" EmptyView="No Images to Display" HorizontalOptions="Center">
                    <CarouselView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout>
                                <Frame HasShadow="True" Padding="2"                                                   
                                                   CornerRadius="5" BackgroundColor="{DynamicResource Orange-700}"                                                
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="CenterAndExpand">
                                    <SwipeView>
                                                        <SwipeView.TopItems>
                                            <SwipeItems Mode="Execute">
                                                            <SwipeItem Text="Edit" 
                                                                    IconImageSource="{x:Static helpers:IconFont.ContentSaveEdit}"
                                                                    BackgroundColor="#FFAB40"
                                                                    Command="{Binding Source={x:Reference mainLayout}, Path=BindingContext.ImageDetailCommand}"
                                                                    CommandParameter="{Binding}" />
                                                        </SwipeItems>
                                                    </SwipeView.TopItems>
                                        <SwipeView.BottomItems>
                                            <SwipeItems Mode="Execute">
                                                <SwipeItem Text="Delete"
                                                                IconImageSource="{x:Static helpers:IconFont.Delete}"
                                                                BackgroundColor="Red"  IsVisible="{Binding IsEdit, Source={x:Reference mainLayout}} "
                                                                Command="{Binding Source={x:Reference mainLayout}, Path=BindingContext.DeleteImageCommand}"
                                                                CommandParameter="{Binding}" />
                                            </SwipeItems>
                                        </SwipeView.BottomItems>
                                    <StackLayout>
                                        <Image Source="{Binding ImageUrl}" Aspect="AspectFill" VerticalOptions="CenterAndExpand"                                                                
                                                                HorizontalOptions="Center" />
                                    </StackLayout>
                                    </SwipeView>
                                </Frame>
                            </StackLayout>
                        </DataTemplate>
                    </CarouselView.ItemTemplate>
                    <CarouselView.ItemsLayout>
                        <LinearItemsLayout Orientation="Horizontal" SnapPointsType="MandatorySingle"
                                                ItemSpacing="10" />
                    </CarouselView.ItemsLayout>
                </CarouselView>
                <IndicatorView x:Name="indicatorView"
                                           IndicatorColor="{DynamicResource Orange-100}"
                                           SelectedIndicatorColor="{DynamicResource Orange-900}"
                                           HorizontalOptions="Center" />
            </StackLayout>
