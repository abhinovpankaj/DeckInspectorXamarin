                                            </Grid.ColumnDefinitions>

                                            <ImageButton
                                            Grid.RowSpan="2"
                                            Grid.Column="1"
                                            Margin="5"
                                            Command="{Binding BindingContext.DeleteVisualFormCommand, Source={x:Reference FlexTypes}}"
