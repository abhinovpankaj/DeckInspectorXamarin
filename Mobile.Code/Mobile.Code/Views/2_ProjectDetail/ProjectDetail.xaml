                                    FontFamily="{StaticResource Montserrat-SemiBold}"
                                                         MaxLines="2" LineBreakMode="TailTruncation"
                                    Style="{StaticResource LabelStyle}"
                                    Text="{Binding Name}"
                                    TextColor="White" />
                                    <Label MaxLines="2" LineBreakMode="TailTruncation" WidthRequest="280" FontFamily="{StaticResource Montserrat-Regular}" Grid.Row="1"
                                     HorizontalTextAlignment="Start"
                                   Text="{Binding Description}" 
                                    Style="{StaticResource LabelStyle}"
                                  
                                   TextColor="{DynamicResource Gray-900}" >

                                    </Label>
                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding BindingContext.BuildingDetailCommand, Source={x:Reference FlexTypes2}}" CommandParameter="{Binding}"></TapGestureRecognizer>


                                    </Grid.GestureRecognizers>

                                </Grid>
                                <!--<Frame.GestureRecognizers>

                                                <TapGestureRecognizer Command="{Binding BindingContext.ProjectDetailCommand, Source={x:Reference FlexTypes}}" CommandParameter="{Binding}"></TapGestureRecognizer>

                                            </Frame.GestureRecognizers>-->
                                <!--</Frame>-->
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </FlexLayout>
                </ScrollView>
