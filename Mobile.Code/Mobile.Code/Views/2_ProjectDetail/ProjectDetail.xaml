<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             
             xmlns:helpers="clr-namespace:Mobile.Code.Helpers"
               xmlns:controls="clr-namespace:Mobile.Code.Controls"
                xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             Shell.NavBarIsVisible="False"
             xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             x:Class="Mobile.Code.Views.ProjectDetail">
      <ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness">
        <On Platform="iOS" Value="0,45,0,0" />
        <On Platform="Android, UWP" Value="0,0,0,0" />
        </OnPlatform>
</ContentPage.Padding>
    
    <ContentPage.Content>
        
        <AbsoluteLayout>

            <controls:Loading   AbsoluteLayout.LayoutBounds="0,0,1,1" IsVisible="{Binding IsBusyProgress}"
        AbsoluteLayout.LayoutFlags="All"></controls:Loading>
            <Grid AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All" IsVisible="{Binding IsBusyProgress,Converter={StaticResource InverseBoolConverter}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid 
                x:Name="gridtoolbar" HeightRequest="200"
                Padding="0"
                
        BackgroundColor="White">
                

                <ffimageloading:CachedImage Aspect="AspectFill"
                                                 Source="{Binding Project.ImageUrl}"
                                             
                                                HeightRequest="180">

                </ffimageloading:CachedImage>
                    <Button x:Name="btnInvasive"  Margin="5"  Text="{Binding BtnInvasiveText}" IsVisible="{Binding CanInvasiveCreate}"  TextColor="White" BackgroundColor="#2e479b"   
                                    BorderWidth="1"
                                    HeightRequest="35" WidthRequest="120"
                                    ImageSource="{FontImage FontFamily={StaticResource MaterialFontFamily},Glyph={x:Static helpers:IconFont.Refresh},Color=White,Size=20}"
                                         FontFamily="{StaticResource Montserrat-Regular}"
                                    
                                  
                                     Command="{Binding CreateInvasiveCommand}"
                                  
                                    HorizontalOptions="Center" VerticalOptions="End"></Button>

                    <Label  VerticalTextAlignment="Center" Margin="5,20,0,0" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"
                                    FontFamily="{StaticResource Montserrat-Bold}"
                                    FontSize="18"                           
                                    Style="{StaticResource LabelStyle}"
                                    Text="{Binding Project.Name}"
                                    TextColor="White" />
                <Label Margin="5" VerticalTextAlignment="Center" VerticalOptions="End" HorizontalOptions="Start"
                                    FontFamily="{StaticResource Montserrat-Bold}"
                                    FontSize="12"                           
                                     Style="{StaticResource LabelStyle}"
                                    Text="{Binding Project.CreatedOn}"
                                    TextColor="White" />
                    
                <Image Margin="0,15,0,0"
                    Grid.Column="0"
                    HeightRequest="35"
                    HorizontalOptions="Start"
                    Source="LeftArrow.png"
                    VerticalOptions="Start"
                    WidthRequest="35">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoBackCommand}" />
                    </Image.GestureRecognizers>
                </Image>
                <Label Text=""  FontSize="12"
                   Style="{StaticResource LabelStyle}"
                   TextColor="Black"
                   FontAttributes="None"
                   FontFamily="{StaticResource Montserrat-Regular}"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="CenterAndExpand"/>
                    <Image Margin="10" x:Name="imgbtnEdit" 
                    
                    HeightRequest="30"
                    HorizontalOptions="End" 
                    Source="Edit.png"
                    VerticalOptions="End"
                    WidthRequest="30">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding EditCommand}" />
                    </Image.GestureRecognizers>
                </Image>
                    <Image Margin="5" x:Name="imgbtnDelete" IsVisible="{Binding IsEditDeleteAccess}"
                    WidthRequest="30"
               HeightRequest="30"
                    HorizontalOptions="End" 
                    Source="delete.png"
                    VerticalOptions="Start"
                 >
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding DeleteCommand}" />
                    </Image.GestureRecognizers>
                </Image>

            </Grid>
             <ScrollView Margin="0" Grid.Row="1" VerticalOptions="FillAndExpand"  >




