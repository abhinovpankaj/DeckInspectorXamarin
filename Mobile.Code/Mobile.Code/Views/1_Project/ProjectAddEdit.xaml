                        Text="{Binding Title}"
                        TextColor="Black"
                        VerticalOptions="CenterAndExpand" />
                    <Label
                        FontAttributes="None"
                        FontFamily="{StaticResource Montserrat-SemiBold}"
                        FontSize="12"
