    <ShellItem
        IsTabStop="False"
        Route="login"
        Style="{StaticResource HomeShell}">
        <ShellContent ContentTemplate="{DataTemplate views:LoginPage}" />
    </ShellItem>
    <FlyoutItem
        FlyoutDisplayOptions="AsMultipleItems"
        IsTabStop="False"
        Route="main"
        Shell.TabBarIsVisible="False">

        <ShellContent
            Title="Project(s)"
            ContentTemplate="{DataTemplate views:HomePage}"
            Icon="{FontImage FontFamily={StaticResource MaterialFontFamily},
                             Glyph={x:Static helpers:IconFont.Home},
                             Color=#2e479b,
                             Size=24}"
            IsTabStop="False"
            Route="project"
            Style="{StaticResource HomeShell}" />

    </FlyoutItem>

    <MenuItem
        Command="{Binding GoNewProjectCommand}"
        IconImageSource="{FontImage FontFamily={StaticResource MaterialFontFamily},
                                    Glyph={x:Static helpers:IconFont.PlusCircle},
                                    Color=#2e479b,
                                    Size=24}"
        Text="New Project" />
    <MenuItem
        Command="{Binding GoSettingCommand}"
        IconImageSource="{FontImage FontFamily={StaticResource MaterialFontFamily},
                                    Glyph={x:Static helpers:IconFont.Cog},
                                    Color=#2e479b,
                                    Size=24}"
        Text="Settings" />

    <MenuItem
        Command="{Binding LogoutCommand}"
        IconImageSource="{FontImage FontFamily={StaticResource MaterialFontFamily},
                                    Glyph={x:Static helpers:IconFont.Logout},
                                    Color=#2e479b,
                                    Size=24}"
        Text="Logout" />
    
    <MenuItem IconImageSource="{FontImage FontFamily={StaticResource MaterialFontFamily}, Glyph={x:Static helpers:IconFont.InformationOutline}, Color=#2e479b, Size=24}" Text="V2.4" />
    



