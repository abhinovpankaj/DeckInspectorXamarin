<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="Mobile.Code.Controls.FlyoutHeader"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:helpers="clr-namespace:Mobile.Code.Helpers"
    xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Visual="Material">


    <Grid BackgroundColor="{DynamicResource  ColorBackground}"
        Margin="0,10,0,10" RowDefinitions="*,Auto"
        HeightRequest="140"
        HorizontalOptions="FillAndExpand"
        VerticalOptions="FillAndExpand">
        
        <yummy:PancakeView Grid.RowSpan="2"                          
                    CornerRadius="5"
                    HorizontalOptions="Fill"
                    VerticalOptions="Fill">
            <Image               
                Aspect="AspectFit"
                Source="icon.png"/>
        </yummy:PancakeView>

        <Label
            x:Name="txtUserName"
            Grid.Row="1" Margin="20,10,10,0"             
            FontAttributes="Bold"
            FontSize="Large"
            HorizontalOptions="End"
            VerticalOptions="StartAndExpand"
            Text="{Binding LogUserName}"
            TextColor="{DynamicResource Orange-900}"
             />
    </Grid>

</ContentView>